{
  "name": "fumadocs-enhanced-steps",
  "version": "0.1.0",
  "description": "Enhanced Steps component for Fumadocs with lettered increments, icons, and titles",
  "keywords": [
    "fumadocs",
    "steps",
    "documentation",
    "react",
    "mdx"
  ],
  "homepage": "https://github.com/sebastianhuus/fumadocs-enhanced-steps",
  "license": "MIT",
  "author": "Sebastian Huus",
  "repository": {
    "type": "git",
    "url": "https://github.com/sebastianhuus/fumadocs-enhanced-steps"
  },
  "files": [
    "dist/*",
    "styles/*"
  ],
  "type": "module",
  "main": "./dist/index.mjs",
  "types": "./dist/index.d.mts",
  "exports": {
    "./styles/steps.css": "./styles/steps.css",
    ".": {
      "types": "./dist/index.d.mts",
      "import": "./dist/index.mjs"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsdown",
    "dev": "tsdown --watch",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm build"
  },
  "dependencies": {
    "tailwind-merge": "^3.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.0.0",
    "react": "^19.0.0",
    "tsdown": "^0.18.0",
    "typescript": "^5.7.0",
    "rimraf": "^6.0.0"
  },
  "peerDependencies": {
    "@types/react": "*",
    "react": "^18.0.0 || ^19.0.0"
  },
  "peerDependenciesMeta": {
    "@types/react": {
      "optional": true
    }
  }
}
